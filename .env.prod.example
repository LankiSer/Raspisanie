# Production Environment Variables

# Database
POSTGRES_DB=schedule_saas_prod
POSTGRES_USER=schedule_user
POSTGRES_PASSWORD=super_secure_database_password_change_me

# Backend
JWT_SECRET=super-secure-jwt-secret-key-at-least-32-characters-change-in-production
JWT_EXPIRES=3600
ORG_DEFAULT_LOCALE=ru
TZ=Europe/Moscow

# CORS Origins (your production domain)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Redis
REDIS_PASSWORD=secure_redis_password_change_me

# SSL/TLS (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# Email (for future notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your_email_password

# Backup settings
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
